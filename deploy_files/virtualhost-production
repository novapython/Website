<VirtualHost *:8080>
ServerAdmin ryan@novapython.org
ServerName www.novapython.org
ServerAlias novapython.org

DocumentRoot /var/www/novapython/Website
<Directory /var/www/novapython/Website>
Order deny,allow
Allow from all
</Directory>

WSGIScriptAlias / /var/www/novapython/Website/router.py
Alias /static /var/www/novapython/Website/static

<Directory /var/www/novapython/Website/static>
    # directives to effect the static directory
    Options +Indexes
</Directory>
</VirtualHost>
